<div class="comment-create">
  <div class="comment-style">
    <%= form_with(model: [@shop, @comment]) do |form| %>
      <div class="comment-create-container">
        <h1><strong><%= t('.comment_create_title')%></strong></h1>
        <turbo-frame id="value-frame">
          <%= render "comments/value" %>
        </turbo-frame>
      </div>
      <%= form.text_field :content, placeholder: "コメントを入力してください", class:"content" %>
      <div class="submit-visit-day">
        <div class="visit-day">
          <%= form.label :visit_day %>
          <%= form.date_select :visit_day %>
        </div>
        <div class="submit">
          <%= form.hidden_field :value, value: @value %>
          <%= form.submit t('.submit'), class:"submit-botton" %>
        <div>
      </div>
    <% end %>
  </div>
</div>