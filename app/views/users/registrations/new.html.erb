<%= render "users/shared/error_messages", resource: resource %>
<div class="users-registrations-new">
  <div class="card-style">
    <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="title">
        <h2><%= t('.title')%></h2>
      </div>
      <div class="form-group">
        <%= f.label :name %><br>
        <%= f.text_field :name, class:"text-field" %>
      </div>

      <div class="form-group">
        <%= f.label :email %><br>
        <%= f.email_field :email, autocomplete: "email", class:"text-field"%>
      </div>

      <div class="form-group">
        <%= f.label :password %><br>
        <%= f.password_field :password, autocomplete: "new-password", class:"text-field" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"text-field" %>
      </div>

      <div class="submit">
        <%= f.submit t('.submit'),class:"submit-botton" %>
      </div>
    <% end %>
    <div class="login">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>